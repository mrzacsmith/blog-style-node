<h6>Dashboard</h6>
<h3>Welcome {{firstName}} {{lastName}},</h3>
<p>Here are your stories!</p>
{{#if stories}}
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td><a href="/storis/{{_id}}">{{title}}</a></td>
      <td>{{createdAt}}</td>
      <td><span class="dash-status">{{status}}</span></td>
      <td></td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You have not created any stories!</p>
{{/if}}